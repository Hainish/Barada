<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/enter_key" />
	<EditText android:id="@+id/new_key_text" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1" />
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button android:id="@+id/new_key_confirm" android:text="@string/new_key_confirm"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<Button android:id="@+id/new_key_cancel" android:text="@string/new_key_cancel"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
